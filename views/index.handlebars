  <!-- Need to add in devour button -->
  {{/unless}}
  {{/each}}
</div>
<div class="col-lg-4 col-lg-offset-1" id="devouredBurgers">
  {{#each burgers}}
  {{#if this.devoured}}
  <div class="well well-lg">{{this.burger_name}}</div>
  <!-- Need to add in devour button -->
  {{/if}}
  {{/each}}
</div>
</div>
